{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowJs": true,
    "useUnknownInCatchVariables": false,
    "jsx": "react",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
